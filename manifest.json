{
    "manifest_version": 2,
    "name": "Highlight Tool",
    "description": "Enables user to highlight words",
    "version": "0.5",
    "browser_action": {
        "default_title": "Highlight tool",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}